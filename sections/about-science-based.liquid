<section class="about-science-based">
  <div class="about-science-based__inner container">
    <div class="about-science-based__left">
      <img src="{{ section.settings.image | img_url: 'master' }}" alt=""> 
    </div>
    <div class="about-science-based__right">
      <h2 class="header-medium js-visibility reveal-slide">{{ section.settings.title}}</h2>      
      {% for block in section.blocks %}
        <div class="about-science-based__item">
          <div class="about-science-based__item-svg">
            {{ block.settings.svg }}
          </div>
          <div class="about-science-based__item-copy">
          <h4 class="sub-header">{{ block.settings.heading }}</h4> 
          <p class="body-small">{{ block.settings.copy }}</p>           
          </div>
        </div>
      {% endfor %}      
    </div>
  </div>
</section>

{% schema %}
  {
    "name": "Science Based",
    "settings": [
      {
        "type": "image_picker",
        "id": "image",
        "label": "Image"
      },
      {
        "type": "text",
        "id": "title",
        "label": "Facts Title"
      }
    ],
    "blocks":[
      {
        "type": "science",
        "name": "Science Fact",
        "settings": [
          {
            "type": "html",
            "id": "svg",
            "label": "SVG Code"
          },
          {
            "type": "text",
            "id": "heading",
            "label": "Heading"
          },
          {
            "type": "textarea",
            "id": "copy",
            "label": "Copy"
          }
        ]
      }       
    ]
  }
{% endschema %}