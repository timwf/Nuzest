<section class="home-featured-product js-visibility reveal-slide">  
  <div class="home-featured-product__heading">
    <h2 class="header-medium">{{ section.settings.heading }}</h1>
    <div class="home-featured-product__nav">
      {% include 'icon-left-arrow' %} 
      {% include 'icon-right-arrow' %} 
    </div>
  </div>
  <div class="home-featured-product__slider-wrap">
    <div class="home-featured-product__inner ">
      <div class="swiper-wrapper">
      {% for block in section.blocks %}
      {% assign product = all_products[block.settings.chosen_product] %}
          {% include 'product-card', product: product %}   
      {% endfor %}
      </div>
    </div>
  </div>
</section>


{% schema %}
{
  "name": "Featured Products",
  "class": "featured-prd",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading"
    }
  ],
  "blocks": [
    {
      "type": "product",
      "name": {
        "en": "Product"
      },
      "settings": [
        {
          "type": "product",
          "id": "chosen_product",
          "label": {
            "en": "Product"
          }
        }
      ]
    }
  ],
  "presets": [
    {
      "category": "Image",
      "name": "Featured Products"
    }
  ]
}

{% endschema %}