<section class="home-featured-product">  
  <div class="home-featured-product__heading">
    <h2 class="header-medium">{{ section.settings.heading }}</h1>
    <div class="home-featured-product__nav">
      {% include 'icon-left-arrow' %} 
      {% include 'icon-right-arrow' %} 
    </div>
  </div>
  <div class="home-featured-product__slider-wrap">
    <div class="home-featured-product__inner swiper-container">
      <div class="swiper-wrapper">
      {% for block in section.blocks %}
      {% assign product = all_products[block.settings.chosen_product] %}
        <div class="home-featured-product__item swiper-slide">
          <div class="home-featured-product__item-img">
            <img  src="{{product.featured_image | img_url: '400x400'}}" alt="">
          </div>
          <div class="home-featured-product__item-price">
            <p class="body-bold">{{ product.title }}</p>
            <p class="body-small">{{ product.price | money }}</p>
          </div>

          <a href="">
            <div class="btn">
              <p>Add to Your Cart - Â£33.99</p>
            </div>
          </a>
          <div class="home-featured-product__product-options-wrap">
            {% for product_option in product.options_with_values %}
            {% unless product_option.name == "Title" %}
              <div class="home-featured-product__product-options">
                <select class="body">
                  {% for value in product_option.values %}
                    <option {% if product_option.selected_value == value %}selected{% endif %} style="background-image:url({{ 'vannila.png' | asset_url }});">
                      {{ value }}
                    </option>
                  {% endfor %}
                </select>
              </div>
            {% endunless %}
          {% endfor %}
          </div>
        </div>
      {% endfor %}
      </div>
    </div>
  </div>
</section>



{% schema %}
{
  "name": "Featured Products",
  "class": "featured-prd",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading"
    }
  ],
  "blocks": [
    {
      "type": "product",
      "name": {
        "en": "Product"
      },
      "settings": [
        {
          "type": "product",
          "id": "chosen_product",
          "label": {
            "en": "Product"
          }
        }
      ]
    }
  ],
  "presets": [
    {
      "category": "Image",
      "name": "Featured Products"
    }
  ]
}

{% endschema %}