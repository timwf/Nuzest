<div class="product-card__item swiper-slide">
  <div class="product-card__item-img">
    <img class="js-product-first-image active" src="{{product.featured_image | img_url: '400x400'}}" alt="">
    {% if product.media[1] %}
    <img class="js-product-second-image" src="{{ product.media[1] | img_url: '400x400'}}" alt="">
    {% endif %}
  </div>
  <div class="product-card__item-price">
    <p class="body-bold">{{ product.title }}</p>
    <p class="body-small">From {{ product.price | money }}</p>
  </div>
  <button class="btn js-product-card-add-to-cart" data-variant-id="">
    <p>Add to Your Cart - {{ product.price | money }}</p>
  </button>
  <div class="product-card__product-options-wrap">
    {% for product_option in product.options_with_values %}
    {% unless product_option.name == "Title" %}
      <div class="product-card__product-options">
        <select class="body">
          {% for value in product_option.values %}
            <option {% if product_option.selected_value == value %}selected{% endif %} style="background-image:url({{ 'vannila.png' | asset_url }});">
              {{ value }}
            </option>
          {% endfor %}
        </select>
      </div>
    {% endunless %}
  {% endfor %}
  </div>
  {% for variant in product.variants %}
  {% if variant.available %}
    <div class="hidden-vars">
      <div class="js-variant" 
      data-id="{{ variant.id }}" 
      data-price="{{ variant.price | money}}"
      data-title="{{ variant.title}}"
      ></div>
    </div>
  {% endif %}
{% endfor %}
</div>




